<section id="trusted_logos" class="home-section">
    <div id="trusted_container">
        <div id="trusted_textgroup">
            <h2 class="section-title">
                Latest docs and resources
            </h2>
        </div>
        <div id="doc_container">
            {% for tag in android_tags %}
            {% if loop.index0 < 3 %}
            <div class="post-column">
                {% set taglist = collections[ tag.name ] %}
                {% for post in taglist | reverse %}
                {% if loop.index0 < 4 %}
                <div class="post-block">
                    <div class="post-body">
                        <div class="post-meta post-meta-condensed">
                            <div class="meta-single">
                                {{ post.date | dateFull }}
                            </div>
                            <div class="meta-single">
                                {% for tag in post.data.tags %}
                                {% if not tag.includes("android-docs") %}
                                #<a class="meta-tag" href="/tags/{{ tag | slugify }}/">{{ tag }}</a>
                                {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                        <h3 class="post-title">
                            <a href="{{ post.url }}">{{ post.data.title }}</a>
                        </h3>
                        {% if post.data.excerpt|length %}
                        <div class="post-summary">
                            {{ post.data.excerpt }}
                        </div>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
                {% endfor %}
            </div>
            {% endif %}
            {% endfor %}
        </div>
    </div>
    <h3 class="post-title post-archive">
        <a class="button" href="/android">ðŸ“š View the docs Â»</a>
    </h3>
</section>
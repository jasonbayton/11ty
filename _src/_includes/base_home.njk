<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- head/meta goes here -->
        {% include "./_parts/head.njk" %}
        <!-- // -->
    </head>
    <body>
        <header class="home-background">
            <!-- Header goes here -->
            {% include "./_parts/header.njk" %}
            <!-- // -->
            <section class="intro_wrapper">
                <section id="intro_block" class="home-section">
                    <div id="intro_heading">
                        {% renderFile "./_src/_includes/_parts/home/heading.md" %}
                    </div>
                    <div id="intro_android">
                        <img id="android_head" src="/img/aec.png" width="260px" alt="android docs">
                    </div>
                    <div id="intro_subheading">
                        {% renderFile "./_src/_includes/_parts/home/subheading.md" %}
                    </div>
                    <div id="intro_cta">
                        <h3 class="cta">
                            <a class="button" href="/support">Get in touch</a>
                        </h3>
                    </div>
                    <div id="intro_text">
                            {{ content | safe }}
                    </div>
                </section>
            </section>
        </header>
        <content id="home">
            <section id="partner_logos">
                <div class="home-subheading partner-heading">
                    {% renderFile "./_src/_includes/_parts/home/partner-logos.md" %}
                </div>
                {% include "./_parts/partner-logos.njk" %}
            </section>

            {% include "./_parts/highlights_home.njk" %}
            <section id="posts_container">
                <section id="posts" class="home-section">
                    <div id="post_container">
                        <div class="post-column">
                            <div class="home-heading">
                                Latest articles 
                            </div>
                            {% for post in collections.blog | reverse %}
                            {% if loop.index0 < 6 %}
                            <div class="post-block">
                                <div class="post-body">
                                    <div class="post-meta post-meta-condensed">
                                        <div class="meta-single">
                                            {{ post.date | dateFull }}
                                        </div>
                                        <div class="meta-single">
                                            {% for tag in post.data.tags %}
                                            {% if not tag.includes("blog") %}
                                            #<a class="meta-tag" href="/tags/{{ tag | slugify }}/">{{ tag }}</a>
                                            {% endif %}
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <h3 class="post-title">
                                        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
                                    </h3>
                                    {% if post.data.excerpt|length %}
                                    <div class="post-summary">
                                        {{ post.data.excerpt }}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                            {%- endif -%}
                            {%- endfor -%}
                            <h3 class="post-title post-archive">
                                <a class="button" href="/blog">✍️ Archive »</a>
                            </h3>
                        </div>
                        <div class="post-column mobile-50-padding">
                            <div class="home-heading">
                                Latest notes 
                            </div>
                            {% for post in collections.notes | reverse %}
                            {% if loop.index0 < 4 %}
                            <div class="post-block">
                                <div class="post-body post-body-notes">
                                    <div class="post-meta post-meta-condensed">
                                        <div class="meta-single">
                                            <a href="{{ post.url | url }}">{{ post.data.title }}</a>
                                        </div>
                                    </div>
                                    <div class="post-summary">
                                        {{ post.content | truncate(30) | safe}} <a href="{{ post.url | url }}" class="blood-orange">more</a>
                                    </div>
                                </div>
                            </div>
                        {% endif %}    
                        {% endfor %}
                        <h3 class="post-title post-archive">
                            <a class="button" href="/notes">✍️ Notes »</a>
                        </h3>
                        </div>
                    </div>
                </section>
            </section>
            
            <section id="hero_banner" class="home-section">
                <div class="home-heading">
                    Videos 
                </div>
                <div id="af_group">
                    <div id="banner_left">
                        {% renderFile "./_src/_includes/_parts/home/vidtext.md" %}
                    </div>
                    <div id="banner_right">
                        <div id="af_text">
                            {% renderFile "./_src/_includes/_parts/home/video.md" %}
                        </div>
                    </div>
                </div>
                <div id="af_group_split">
                    <div id="video_left">
                        {% renderFile "./_src/_includes/_parts/home/video2.md" %}
                        {% renderFile "./_src/_includes/_parts/home/video4.md" %}
                    </div>
                    <div id="banner_right">
                        <div id="video_right">
                            {% renderFile "./_src/_includes/_parts/home/video3.md" %}
                            {% renderFile "./_src/_includes/_parts/home/video5.md" %}
                        </div>
                    </div>
                </div>
            </section>
        </content>
        <footer>
            {% include "./_parts/footer.njk" %}
        </footer>
    </body>
</html>
